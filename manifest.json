{
	"manifest_version": 2,

	"name": "Autoquote",
	"description": "This extension uses context to automatically determine which quotation mark or apostrophe should be used.",
	"version": "1.0.1",
	"author": "Tyler Crompton",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js":      ["autoquote.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"19": "images/icon19-enabled.png",
			"38": "images/icon38-enabled.png"
		}
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"options_page": "options.html",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"permissions": [
		"activeTab",
		"storage"
	],

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}
